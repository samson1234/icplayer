<?xml version='1.0' encoding='UTF-8' ?>

<addon id='TextAudio' xmlns="http://icplayer.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://icplayer.com ../../tools/addon.xsd">
	<model>
        <property name='defaultControls' displayName='Default controls' type='boolean' />
        <property name='displayTime' displayName='Display time' type='boolean' />
        <property name='enableLoop' displayName='Enable loop' type='boolean' />
        <property name='playPart' displayName='Individual fragment playback' type='boolean' />

        <property name='Slides' type='list'>
            <property name='Text' type='html' isLocalized='true' />
            <property name='Times' type='text' isLocalized='true' />
        </property>
        <property name='mp3' type='file' />
        <property name='ogg' type='file' />

        <property name='playSeparateFiles' displayName='Vocabulary audio files playback' type='boolean' />
        <property name='separateFiles' displayName='Vocabulary audio files' type='list'>
            <property name='mp3' type='file' />
            <property name='ogg' type='file' />
        </property>

        <property name='onEnd' displayName='On end' type='event' />
    </model>
</addon>